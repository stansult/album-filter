{
  "manifest_version": 3,
  "name": "Album Filter",
  "version": "0.1.2",
  "description": "Add in-page text filtering and auto-loading controls to long album pages.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_title": "Album Filter"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
